{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "checkJs": true,
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "types": ["node", "vitest/globals"]
  }
}
